{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@repo/tools": [
        "../../packages/tools/src/index"
      ],
      "@repo/resume": [
        "../../packages/resume/src/index"
      ],
      "@repo/tools/*": [
        "../../packages/tools/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".mastra"
  ],
  "include": [
    ".",
    "../../packages/tools/src/**/*"
  ]
}